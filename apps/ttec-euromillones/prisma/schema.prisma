generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["deno"]
  output          = "../generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_POST_TTEC_EUROMILLONES")
}

model User {
  id              Int               @id
  name            String
  email           String            @unique
  password        String
  roleId          Int
  UserXRole       UserXRole         @relation(fields: [roleId], references: [id])
  estadoId        Int
  UserXEstado     UserXEstado       @relation(fields: [estadoId], references: [id])
  saldo           Decimal           @db.Decimal(9, 2)
  CodeSecure      CodeSecure[]
  UserXBizum      UserXBizum[]
  UserXMovimiento UserXMovimiento[]
  UserXSaldoXTmp  UserXSaldoXTmp[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserXBizum {
  id                Int                @id @default(autoincrement())
  importe           Decimal            @db.Decimal(9, 2)
  userId            Int
  User              User               @relation(fields: [userId], references: [id])
  estadoId          Int
  UserXBizumXEstado UserXBizumXEstado  @relation(fields: [estadoId], references: [id])
  BizumXMovimiento     BizumXMovimiento[]
  createdAt         DateTime           @default(now())
}

model UserXMovimiento {
  id                   Int                  @id @default(autoincrement())
  importe              Decimal              @db.Decimal(9, 2)
  userId               Int
  User                 User                 @relation(fields: [userId], references: [id])
  tipoId               Int
  UserXMovimientoXTipo UserXMovimientoXTipo @relation(fields: [tipoId], references: [id])
  UserXSaldoXTmp       UserXSaldoXTmp[]
  BizumXMovimiento     BizumXMovimiento[]
  createdAt            DateTime             @default(now())
}

model BizumXMovimiento {
  id      Int @id @default(autoincrement())
  bizumId Int
  movimientoId    Int
  UserXBizum      UserXBizum      @relation(fields: [bizumId], references: [id])
  UserXMovimiento UserXMovimiento @relation(fields: [movimientoId], references: [id])
}

model UserXSaldoXTmp {
  id              Int             @id @default(autoincrement())
  saldo           Decimal         @db.Decimal(9, 2)
  userId          Int
  movimientoId    Int
  User            User            @relation(fields: [userId], references: [id])
  UserXMovimiento UserXMovimiento @relation(fields: [movimientoId], references: [id])

  createdAt DateTime @default(now())
}

model UserXMovimientoXTipo {
  id              Int               @id
  descripcion     String            @unique
  UserXMovimiento UserXMovimiento[]
}

model UserXRole {
  id          Int    @id
  descripcion String @unique
  user        User[]
}

model UserXEstado {
  id          Int    @id
  descripcion String @unique
  user        User[]
}

model CodeSecure {
  code      String   @id @db.Uuid
  type      Int // 1 Code for reset email
  userId    Int
  User      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model Apuesta {
  id             Int            @id @default(autoincrement())
  fecha          DateTime
  apostado       Decimal        @default(0) @db.Decimal(9, 2)
  ganado         Decimal        @default(0) @db.Decimal(9, 2)
  estadoId       Int
  ApuestaXEstado ApuestaXEstado @relation(fields: [estadoId], references: [id])
  createdAt      DateTime       @default(now())
}

model ApuestaXEstado {
  id          Int       @id
  descripcion String    @unique
  Apuesta     Apuesta[]
}

model UserXBizumXEstado {
  id          Int          @id
  descripcion String       @unique
  UserXBizum  UserXBizum[]
}

